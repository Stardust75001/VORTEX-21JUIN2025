                            loading="lazy">
                    </div>
                {% endunless %}
                <div class="{% if block.settings.img_3 == blank %}col-lg-12{% else %}col-lg-7{% endif %} mb-6 mb-lg-0">
                    {% unless block.settings.title_pane_3 == blank %}
