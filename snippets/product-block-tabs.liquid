{% liquid
    assign mt = block.settings.mt | prepend: 'mt-'
    assign mb = block.settings.mb | prepend: 'mb-'
%}
  
<style>
@media screen and (max-width: 992px) {
    .product-block-tabs .nav {
        flex-wrap: nowrap;
        overflow-x: auto;
        overflow-y: hidden;
    }
    .product-block-tabs .nav-tabs {
        justify-content: flex-start !important;
    }
}
</style>

<div class="product-block-tabs {{ mt }} {{ mb }}" {{ block.shopify_attributes }}>
  
    <div 
        id="nav-tabs-{{ block.id }}" 
        class="nav {{ block.settings.tabs_style }} {% if block.settings.tabs_style == 'nav-pills' %}pb-2{% endif %} {{ block.settings.tabs_position }}" 
        role="tablist">
        {% unless block.settings.tab_title_1 == blank %}
          <li class="nav-item" role="presentation">
            <button id="tab-{{ block.id }}" 
                    class="nav-link {% if block.settings.open_first_tab == true and block.settings.tab_title_1 != blank %}active{% endif %}"
                    data-bs-toggle="tab" 
                    data-bs-target="#tab-pane-{{ block.id }}" 
                    type="button" 
                    role="tab" 
                    aria-controls="tab-pane-{{ block.id }}" 
                    aria-selected="{% if block.settings.open_first_tab == true and block.settings.tab_title_1 != blank %}true{% else %}false{% endif %}">
                    <div class="d-flex align-items-center p-lg-0 {% if block.settings.tabs_style == 'nav-pills' %}p-0{% else %}p-2{% endif %}">
                        {% unless block.settings.icon_1 == blank %}
                            <div class="me-3 flex-shrink-0">
                                {{ block.settings.icon_1 }}
                            </div>
                        {% endunless %}
                        {{  block.settings.tab_title_1 }}
                    </div>
            </button>
          </li>
        {% endunless %}
        {% unless block.settings.tab_title_2 == blank %}
          <li class="nav-item" role="presentation">
            <button id="tab-{{ block.id }}" 
                    class="nav-link {% if forloop.first %}active{% endif %}" 
                    data-bs-toggle="tab" 
                    data-bs-target="#tab-pane2-{{ block.id }}" 
                    type="button" 
                    role="tab" 
                    aria-controls="tab-pane2-{{ block.id }}" 
                    aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
                    <div class="d-flex align-items-center p-lg-0 {% if block.settings.tabs_style == 'nav-pills' %}p-0{% else %}p-2{% endif %}">
                        {% unless block.settings.icon_2 == blank %}
                            <div class="me-3 flex-shrink-0">
                                {{ block.settings.icon_2 }}
                            </div>
                        {% endunless %}
                        {{  block.settings.tab_title_2 }}
                    </div>
            </button>
          </li>
        {% endunless %}
        {% unless block.settings.tab_title_3 == blank %}
          <li class="nav-item" role="presentation">
            <button id="tab-{{ block.id }}" 
                  class="nav-link {% if forloop.first %}active{% endif %}" 
                  data-bs-toggle="tab" 
                  data-bs-target="#tab-pane3-{{ block.id }}" 
                  type="button" 
                  role="tab" 
                  aria-controls="tab-pane3-{{ block.id }}" 
                  aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
                  <div class="d-flex align-items-center p-lg-0 {% if block.settings.tabs_style == 'nav-pills' %}p-0{% else %}p-2{% endif %}">
                      {% unless block.settings.icon_3 == blank %}
                          <div class="me-3 flex-shrink-0">
                              {{ block.settings.icon_3 }}
                          </div>
                      {% endunless %}
                      {{  block.settings.tab_title_3 }}
                  </div>
            </button>
          </li>
        {% endunless %}
        {% unless block.settings.tab_title_4 == blank %}
          <li class="nav-item" role="presentation">
            <button id="tab-{{ block.id }}" 
                  class="nav-link {% if forloop.first %}active{% endif %}" 
                  data-bs-toggle="tab" 
                  data-bs-target="#tab-pane4-{{ block.id }}" 
                  type="button" 
                  role="tab" 
                  aria-controls="tab-pane4-{{ block.id }}" 
                  aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
