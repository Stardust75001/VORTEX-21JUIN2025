                      {% unless block.settings.icon_4 == blank %}
                          <div class="me-3 flex-shrink-0">
                              {{ block.settings.icon_4 }}
                          </div>
                      {% endunless %}
                      {{  block.settings.tab_title_4 }}
                  </div>
            </button>
          </li>
        {% endunless %}
    </div>
      
    <div class="tab-content">
        <div 
            id="tab-pane-{{ block.id }}" 
            class="tab-pane fade p-5 {% if block.settings.open_first_tab == true and block.settings.tab_title_1 != blank %}show active{% endif %}" 
            role="tabpanel" 
            aria-labelledby="tab-{{ block.id }}" 
            tabindex="0">
            <div class="row align-items-center {{ block.settings.img_align_desktop_1 }}">
                {% unless block.settings.img_1 == blank %}
                    {% liquid
                            case block.settings.img_orientation_1
                                when 'square'
                                    assign img_width  = 900
                                    assign img_height = 900
                                when 'landscape'
                                    assign img_width  = 900
                                    assign img_height = 720
                                when 'potrait'
                                    assign img_width  = 720
                                    assign img_height = 900
                            endcase
                    %}
                    <div class="col-lg-5 mb-6 mb-lg-0">
                        <img
                            class="img-fluid rounded {{ block.settings.img_thumbnail_1 }} {{ block.settings.shadow_sp_1 }}"
                            src="{{ block.settings.img_1.src | image_url: width: img_width, height: img_height, crop: block.settings.img_crop_1 }}"
                            alt="{{ block.settings.img_1.alt | escape }}"
                            width="{{ img_width }}"
                            height="{{ img_height }}"
                            loading="lazy">
                    </div>
                {% endunless %}
                <div class="{% if block.settings.img_1 == blank %}col-lg-12{% else %}col-lg-7{% endif %} mb-6 mb-lg-0">
                    {% unless block.settings.title_pane_1 == blank %}
                        <h3 class="title mb-4 {{ block.settings.title_size_1 }}">
                            {{ block.settings.title_pane_1 }}
                        </h3>
                    {% endunless %}
                    {% unless block.settings.description_1 == blank %}
                        <div class="description small rte">
                            {{ block.settings.description_1 }}
                        </div>
                    {% endunless %}
                </div>
            </div>
        </div>
