{% liquid
    assign mt = block.settings.mt | prepend: 'mt-'
    assign mb = block.settings.mb | prepend: 'mb-'
%}

<div id="product-delivery-info" class="{{ mt }} {{ mb }}" {{ block.shopify_attributes }}>
    <div class="d-flex align-items-center">
        {% unless block.settings.icon == blank %}
            <div class="block-icon flex-shrink-0 me-4">
                {{ block.settings.icon }}
            </div>
        {% endunless %}
        <div class="">
            {% unless block.settings.title == blank %}
                <h2 class="title mb-0 {{ block.settings.title_size }}">
                    {{ block.settings.title }}
                </h2>
            {% endunless %}
            <div class="description d-flex rte small">
                {{ block.settings.description }}
                {% if block.settings.enable_info_bubble %}
                    <span class="d-inline-block ms-4 mt-n1" tabindex="0" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="bottom" data-bs-content="{{ block.settings.info_bubble_text }}">
                        <a class="" type="button" disabled>
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-question-circle-fill" viewBox="0 0 16 16">
                              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z"/>
                            </svg>
                        </a>
                    </span>
               {% endif %}
            </div>
        </div>
    </div>
</div>
