<div class="top-social-bar-wrapper">
  <div class="top-social-bar">
    <div class="top-social-left">
      <a href="https://www.instagram.com/spencerandthecity/" target="_blank" rel="noopener">
        <img src="{{ 'instagram.png' | asset_url }}" alt="Instagram">
      </a>
      <a href="https://www.facebook.com/profile.php?id=61573834333893" target="_blank" rel="noopener">
        <img src="{{ 'facebook.png' | asset_url }}" alt="Facebook">
      </a>
      <a href="https://wa.me/33769238799" target="_blank" rel="noopener">
        <img src="{{ 'WhatsApp.png' | asset_url }}" alt="WhatsApp">
      </a>
      <a href="mailto:hello@thepetsociety.paris">
        <img src="{{ 'mail.png' | asset_url }}" alt="Email">
      </a>
    </div>
    <div class="top-social-right">
      {% for language in localization.available_languages %}
        <a href="{{ language.root_url }}" aria-label="{{ language.endonym_name }}">
          <img src="{{ 'flag-' | append: language.iso_code | append: '.png' | asset_url }}"
               alt="{{ language.endonym_name }}"
               class="flag-icon"
               width="40" height="28" loading="lazy">
        </a>
      {% endfor %}
    </div>
  </div>
</div>