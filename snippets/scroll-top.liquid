{% liquid 
    assign btn_shadow_sp = settings.btn_shadow_sp
%}

<button 
    id="btn-scroll-top"
    class="btn rounded {{ settings.scroll_top_btn_color }} {{ btn_shadow_sp }}"
    type="button" 
    aria-hidden="true"
    data-scroll="{{ settings.go_top_scroll }}"
    data-mobile-position="{{ settings.scroll_mobile_position }}" 
    data-desktop-position="{{ settings.scroll_desktop_position }}"
    onclick="window.scrollTo({ top: 0, behavior: 'smooth' })">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 19V6M5 12l7-7 7 7"/>
    </svg>
</button>


