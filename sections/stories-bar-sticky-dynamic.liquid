{% comment %}
Section : Stories Bar Sticky Configurable (responsive & dynamique via blocks)
{% endcomment %}

<div class="stories-bar-wrapper">
  <style>
    .tooltip-bubble {
      opacity: 0;
      position: absolute;
      top: 110%;
      left: 50%;
      transform: translateX(-50%);
      background-color: {{ section.settings.tooltip_bg }};
      color: white;
      padding: 6px 12px;
      font-size: 14px;
      border-radius: 6px;
      z-index: 9999;
      pointer-events: none;
      transition: opacity 0.3s ease, visibility 0.3s ease;
      max-width: 90vw;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      visibility: hidden;
    }
    .tooltip-bubble::after {
      content: "";
      position: absolute;
      top: -6px;
      left: 50%;
      transform: translateX(-50%);
      border: 6px solid transparent;
      border-bottom-color: {{ section.settings.tooltip_bg }};
    }
    .tooltip-bubble.hover-visible,
    .tooltip-bubble.tap-visible {
      opacity: {{ section.settings.tooltip_opacity }};
      visibility: visible;
      pointer-events: auto;
    }

    .animated-stories-link img {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
      border-radius: 50%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
      .animated-stories-link img {
        width: calc({{ section.settings.icon_size }}px / 2);
        height: calc({{ section.settings.icon_size }}px / 2);
      }
      .tooltip-bubble {
        font-size: 12px;
        top: 100%;
      }
    }
  </style>

  <div class="stories-bar">
    {% assign lang = request.locale.iso_code %}
    {% case lang %}
      {% when 'fr' %}{% assign lang_prefix = '/fr' %}
      {% when 'de' %}{% assign lang_prefix = '/de' %}
      {% else %}{% assign lang_prefix = '' %}
    {% endcase %}

    {% for block in section.blocks %}
      {% assign title = block.settings.title %}
      {% assign image = block.settings.image | image_url: width: 180 %}
      {% assign link = block.settings.link %}
      <a href="{{ lang_prefix }}{{ link }}" class="animated-stories-link" role="link" aria-label="{{ title }}">
        <img src="{{ image }}" alt="{{ title }}" loading="lazy">
        <div class="tooltip-bubble">{{ title }}</div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Stories Bar Sticky",
  "settings": [
    {
      "type": "select",
      "id": "icon_size",
      "label": "Taille des icônes (px)",
      "default": "90",
      "options": [
        { "value": "60", "label": "60px" },
        { "value": "90", "label": "90px" },
        { "value": "120", "label": "120px" }
      ]
    },
    {
      "type": "color",
      "id": "tooltip_bg",
      "label": "Couleur de fond de l'infobulle",
      "default": "#0F6378"
    },
    {
      "type": "range",
      "id": "tooltip_opacity",
      "label": "Opacité de l'infobulle",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Nom de la collection",
          "default": "AU SPA"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icône"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien vers la collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stories Bar Sticky",
      "blocks": [
        {
          "type": "story",
          "settings": {
            "title": "AU SPA",
            "image": "shopify://shop_images/SPA_7af8758a-a38b-4803-a287-ec66101e41c2.png",
            "link": "/spa"
          }
        }
      ]
    }
  ]
}
{% endschema %}