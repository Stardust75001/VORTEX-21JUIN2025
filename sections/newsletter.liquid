{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign bg_color = section.settings.bg_color

    if section.settings.bg_gradient
        assign bg_color = bg_color | append: ' bg-gradient'
    endif
%}

<section 
    id="newsletter-{{ section.id }}" 
    class="newsletter enter-view {{ bg_color }} {{ section.settings.text_align }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }}">
        <div class="newsletter-inner {{ pt }} {{ pb }}">
            <div class="mx-auto" style="max-width: {{ section.settings.max_width }}px">
                <div class="row align-items-lg-center">
                    <div class="col-lg-6 mb-7 mb-lg-0 ">
                        {% render 'section-header' %}
                    </div>
                    <div class="col-lg-6">
                        <div class="px-xxl-8">
                            {% form 'customer' %}
                                <input type="hidden" name="form_type" value="customer">
                                <input type="hidden" name="utf8" value="✓">
                                <input type="hidden" name="contact[tags]" value="newsletter">
                                <input type="hidden" name="contact[accepts_marketing]" value="true">
                                {{ form.errors | default_errors }}
                                {% if form.posted_successfully? %}
                                    <p class="alert alert-success">
                                        {{ 'general.newsletter.confirmation_text' | t }}
                                    </p>
                                {% endif %}
                                {% if section.settings.show_first_name %}
                                    <div class="input-group mb-2 {{ section.settings.input_group_size }}">
                                        <input 
                                            type="text" 
                                            name="contact[first_name]" 
                                            size="30"
                                            class="form-control" 
                                            placeholder="{{ section.settings.first_name_placeholder }}" 
                                            aria-label="{{ section.settings.first_name_placeholder }}" 
                                            autocorrect="off" 
                                            autocapitalize="off">
                                    </div>
                                {% endif %}
                                <div class="input-group mb-0 {{ section.settings.input_group_size }}">
                                    <input 
                                        type="email" 
                                        name="contact[email]" 
                                        size="30"
                                        class="form-control" 
                                        value="{% if customer.email != blank %}{{ customer.email }}{% endif %}" 
                                        placeholder="{{ 'general.newsletter.input_label' | t }}" 
                                        aria-label="{{ 'general.newsletter.input_label' | t }}" 
                                        autocorrect="off" 
                                        autocapitalize="off">
                                    <button class="btn {{ section.settings.btn_color }} {{ section.settings.btn_size }}" type="submit" name="commit">
                                        {{ 'general.newsletter.submit_button' | t }}
                                    </button>
                                </div>
                                {% unless section.settings.notice == blank %}
                                    <div class="notice rte mt-3 lh-sm extra-small text-center">
                                        {{ section.settings.notice }}
                                    </div>
                                {% endunless %}
                            {% endform %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

